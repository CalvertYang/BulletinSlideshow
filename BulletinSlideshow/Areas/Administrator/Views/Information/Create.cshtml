@model BulletinSlideshow.Models.Information

@{
    ViewBag.Title = "佈告管理-新增";
}

<div class="row">
    <div class="span6 offset3">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>新增佈告</legend>

                <div>
                    <div class="input-prepend offset1">
                        @Html.LabelFor(model => model.Content, new { @class = "add-on" })
                        @Html.TextBoxFor(model => model.Content, new { @class = "input-xlarge" })
                        @Html.ValidationMessageFor(model => model.Content)
                    </div>

                    <div class="input-prepend offset1">
                        @Html.LabelFor(model => model.CategoryId, new { @class = "add-on" })
                        @Html.DropDownList("CategoryId")
                        @Html.ValidationMessageFor(model => model.CategoryId)
                    </div>
                </div>

                <div class="controls pull-right">
                    <input type="submit" value="建立" class="btn btn-small btn-primary" />
                    @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-small" })
                </div>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#Content').focus();
    </script>
}
