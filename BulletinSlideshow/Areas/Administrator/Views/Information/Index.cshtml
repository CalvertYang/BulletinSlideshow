                        @Html.DisplayFor(modelItem => item.CreateOn)
                    </td>
                    <td>
                        @Html.RouteLink("編輯", "Administrator", new { controller = "Information", action = "Edit", id = item.Id }, new { @class = "btn btn-small btn-primary" })
                       <button class='delete-button btn btn-small btn-danger' onclick='DeleteWithConfirm(@item.Id);'>刪除</button>
                    </td>
                </tr>
            }
        </table>
    </div>
